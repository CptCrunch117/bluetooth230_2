<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LayClock"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ImageIcon"
            android:layout_width="1px"
            android:layout_height="1px"
            android:background="#000000"

            />

        <TextView
            android:id="@+id/Text_Day_Date"
            android:layout_height="wrap_content"
            android:text="Tue 1/1 "
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_width="wrap_content"


            />

        <TextView
            android:id="@+id/Text_Spacer_For_DigitalClock"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15dp"
            android:layout_width="20dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/Text_Day_Date"

            />

        <DigitalClock
            android:layout_width = "wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#00ff00"
            android:background="#0f0f0f"
            android:textAllCaps="true"
            android:layout_alignTop="@id/Text_Day_Date"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_marginTop="320px"
        >

        <ImageView
            android:id="@+id/Image1"
            android:layout_width="300px"
            android:layout_height="168px"
            android:src="@drawable/coffee_cup_1_1920x1080"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <ImageView
            android:id="@+id/Image2"
            android:layout_width="300px"
            android:layout_height="168px"
            android:src="@drawable/summer_white_beach_1920x1080"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="380px"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lay34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/Image5"
        android:layout_marginBottom="350px"
        >

        <ImageView
            android:id="@+id/Image3"
            android:layout_width="300px"
            android:layout_height="168px"
            android:src="@drawable/ball_3_png_512x512"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <ImageView
            android:id="@+id/Image4"
            android:layout_width="300px"
            android:layout_height="168px"
            android:src="@drawable/ball_4_png_300x300"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="380px"
            />

    </LinearLayout>



    <ImageView
        android:id="@+id/Image5"
        android:layout_width="match_parent"
        android:layout_height="340px"
        android:src="@drawable/summer_white_beach_1920x1080"
        android:background="#000000"
        android:layout_gravity="center"

        android:layout_alignBottom="@+id/Lay2"
        android:layout_marginBottom="550px"

        />


    <LinearLayout
        android:id="@+id/Lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        >


        <ImageView
            android:id="@+id/Image_Left"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_blue_left_400x307"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"

            />


        <ImageView
            android:id="@+id/Image_Right"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_blue_right_400x307"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="380px"
            />


    </LinearLayout>
</RelativeLayout>
